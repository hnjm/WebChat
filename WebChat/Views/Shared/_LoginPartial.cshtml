@using Microsoft.AspNetCore.Identity
@inject SignInManager<Korisnik> SignInManager
@inject UserManager<Korisnik> UserManager


<ul class="navbar-nav">
    @if (SignInManager.IsSignedIn(User))
    {
        <li class="nav-item">
            <a class="nav-link text-dark" asp-controller="Home" asp-action="Index"
               title="Dobro dosli">Dobro dosli @User.Identity.Name!</a>
        </li>
        <li class="nav-item">
            <form class="form-inline" asp-controller="Nalog" asp-action="OdjaviSe">
                <button type="submit" class="nav-link btn btn-link text-info">Odjavi Se</button>
            </form>
        </li>
        <li class="nav-item">
            <a class="nav-link text-dark" asp-controller="Chat"
               asp-action="Index">Chat</a>
        </li>
    }
    else
    {
        <li class="nav-item">
            <a class="nav-link text-dark" asp-controller="Nalog"
               asp-action="Registracija">Registracija</a>
        </li>
        <li class="nav-item">
            <a class="nav-link text-dark" asp-controller="Nalog"
               asp-action="Prijava">Prijava</a>
        </li>

    }



</ul> 